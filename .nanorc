# INSERT: Open file in new buffer and paste
bind F1 help browser
unbind M-\ browser
unbind M-/ browser
unbind ^P browser
unbind ^N browser
unbind ^Y browser
unbind ^V browser
bind ^O "{insert}{flipnewbuffer}" main
bind ^C "{exit}{cancel}" browser
bind ^Q "{exit}{cancel}" browser
bind ^Q "{cancel}{exit}{cancel}" whereisfile
bind ^G gotodir browser

# Paste in browser search
bind ^V "{cancel}{exit}{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{insert}{flipnewbuffer}{browser}{whereis}{paste}" whereisfile

## EXECUTE: paste
bind ^E execute main
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{execute}{paste}" execute
bind ^Q cancel execute

## Open a new void and unnamed buffer
bind ^N "{execute}{flipnewbuffer}echo -n{enter}" main

## Duplicate line
bind ^D "{copy}{paste}{up}{end}" main

## Select all
bind ^A "{firstline}{home}{home}{mark}{lastline}{end}" main

## Remove trailing whitespace
bind F10 "{execute}|sed 's/\s\+$//'{enter}" main

## Snippet
bind M-R "{mark}{prevword}{execute}|read a;if [ -f ~/.nano/snippets/$a ];then cat ~/.nano/snippets/$a|sed -Ez '$ s/\n+$//';else echo -n '$a%%';fi{enter}{home}{whereis}%%{enter}{mark}{right}{right}{delete}" main

## Real time snippets
bind M-N "{whereis}%%{enter}{mark}{right}{right}{delete}" main

## math on selectec text
bind M-M "{cut}{execute}python3 -c 'from math import*;from statistics import*;print("{paste} =",f"{{}{paste}:_.2f}")'{enter}{up}{end}" main

## sort lines
bind F2 "{cut}{mark}{paste}{execute}|sort -f|uniq{enter}{backspace}" main

## reverse order
bind F3 "{cut}{mark}{paste}{execute}|sort -fr|uniq{enter}{backspace}" main

## Move line up
#bind M-K "{end}{mark}{home}{home}{cut}{delete}{up}{enter}{up}{paste}" main
bind M-K "{cut}{up}{paste}{up}{end}" main

## Move line down
#bind M-J "{cut}{end}{enter}{mark}{home}{delete}{paste}{up}" main
bind M-J "{cut}{down}{paste}{up}{end}" main

## Shift + F1
bind F13 nohelp all

bind M-I zero main
