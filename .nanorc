## ========================
## Bind copy, cut and paste
## ========================

## MAIN: copy, cut and paste
bind Sh-M-X cut all
bind Sh-M-C copy all
bind Sh-M-V paste all
bind ^C "{cut}{mark}{paste}{execute}|xsel -ipsb{enter}{undo}{undo}{undo}" main
bind ^X "{cut}{mark}{paste}{execute}|xsel -ipsb{enter}{undo}{undo}" main
bind ^V "{execute}xsel -ob{enter}" main

## SEARCH: paste
bind ^F whereis main
bind ^F whereis help
bind ^F whereis browser
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{whereis}{paste}" search

## REPLACE: paste
bind ^R replace main
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{replace}{paste}" replace

## REPLACEWITH: paste
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{replace}{enter}{paste}" replacewith

## GOTOLINE: paste
bind ^G gotoline main
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{gotoline}{paste}" gotoline

## WRITEOUT: paste
bind M-S writeout main
bind ^V "{cancel}{mark}{execute}xsel -ob{enter}{cut}{undo}{undo}{writeout}{paste}" writeout

